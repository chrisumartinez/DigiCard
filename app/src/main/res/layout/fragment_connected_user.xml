<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/connected_user_avatar_dimen"
            android:layout_height="@dimen/connected_user_avatar_dimen"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="24dp">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:iiv_color="@android:color/black"
                app:iiv_icon="cmd_twitter"
                app:iiv_size="24dp"/>

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:iiv_color="@android:color/black"
                app:iiv_icon="cmd-linkedin"
                app:iiv_size="24dp"/>

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:iiv_color="@android:color/black"
                app:iiv_icon="cmd_facebook"
                app:iiv_size="24dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>