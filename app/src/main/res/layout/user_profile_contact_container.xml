<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_contact_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/profile_image"
        android:src="@drawable/user_photo_fallback"
        android:layout_width="@dimen/connected_user_avatar_dimen"
        android:layout_height="@dimen/connected_user_avatar_dimen"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/contact_first_name"
            android:layout_marginRight="@dimen/connected_user_avatar_dimen"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint = "First Name"
            />
        <TextView
            android:id="@+id/contact_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginRight="@dimen/connected_user_avatar_dimen"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint = "Email"
            android:layout_marginRight="@dimen/connected_user_avatar_dimen"/>
    </LinearLayout>
</LinearLayout>
